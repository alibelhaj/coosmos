{% block form_row %}
    <div class="form-group">
        {{ form_label(form, null, {'label_attr': {'class': 'form-label'}}) }}
        {#{ form_errors(form) }#}
        {{ form_widget(form, {'label_attr': {'class': 'form-control'}}) }}
        <span class="error" {{ errors|length > 0 ? 'style="display: block"' }} >
            {% for error in errors %}
                {{ error.message }}
            {% endfor %}
        </span>
    </div>
{% endblock form_row %}
